# Test Environment Configuration
NODE_ENV=test
PORT=3001

# Test Database
MONGODB_TEST_URI=mongodb://localhost:27017/ecommerce_test

# JWT Configuration for Testing
JWT_SECRET=test_jwt_secret_key_for_testing_purposes_only
JWT_EXPIRES_IN=1h

# AWS Configuration (mock/test values)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test_access_key
AWS_SECRET_ACCESS_KEY=test_secret_key
S3_BUCKET_NAME=test-ecommerce-bucket

# Disable external services in test
ENABLE_EMAIL_SERVICE=false
ENABLE_SMS_SERVICE=false
ENABLE_PUSH_NOTIFICATIONS=false

# Test-specific settings
BCRYPT_ROUNDS=4
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000