{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-trailing-spaces": "warn",
    "eol-last": ["warn", "always"],
    "comma-dangle": ["warn", "never"],
    "space-before-function-paren": ["warn", "never"],

    // Allow MongoDB/Mongoose conventions
    "no-underscore-dangle": ["off"],

    // Relax strict return enforcement
    "consistent-return": "off",

    // Other helpful but non-blocking rules
    "func-names": "warn",
    "no-console": "off"
  }
}
